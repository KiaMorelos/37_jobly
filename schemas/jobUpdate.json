{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "title": "Root Schema",
    "type": "object",
    "default": {},
    "required": [
        "title"
    ],
    "additionalProperties": false,
    "properties": {
        "title": {
            "title": "The title Schema",
            "type": "string",
            "default": "",
            "examples": [
                "Advertising account executive"
            ]
        },
        "salary": {
            "title": "The salary Schema",
            "type": "integer",
            "default": 0,
            "examples": [
                300000
            ]
        },
        "equity": {
            "title": "The equity Schema",
            "type": "string",
            "pattern": "0|(0?\\.[0-9]+)"
        }
    },
    "examples": [{
        "title": "New Title",
        "salary": 300000,
        "equity": "0.0913"
    }]
}